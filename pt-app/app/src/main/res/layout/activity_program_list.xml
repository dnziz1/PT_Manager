<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ProgramList"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Program List"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Allows you to search for and view programs"
                android:textSize="16dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Name Search:"
                    android:textSize="16dp">
                </TextView>

                <EditText
                    android:id="@+id/progListNameSearch"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="Search criteria?"
                    android:inputType="textAutoComplete"
                    android:singleLine="true"
                    android:textSize="16dp">
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Min Days:"
                    android:textSize="16dp">
                </TextView>

                <EditText
                    android:id="@+id/progListMinDays"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:hint="?"
                    android:inputType="textAutoComplete"
                    android:singleLine="true"
                    android:textSize="16dp">
                </EditText>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Max Days:"
                    android:textSize="16dp">
                </TextView>

                <EditText
                    android:id="@+id/progListMaxDays"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:hint="?"
                    android:inputType="textAutoComplete"
                    android:singleLine="true"
                    android:textSize="16dp">
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:text="Trainer:"
                    android:textSize="16dp"></TextView>

                <Spinner
                    android:id="@+id/progListTrainerID"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/progListSearchBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="30dp"
                    android:background="?attr/colorPrimary"
                    android:text="Update Results"
                    android:textColor="#FFF"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/progListCreateBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="30dp"
                    android:background="?attr/colorPrimary"
                    android:text="Create"
                    android:textColor="#FFF"
                    android:textSize="16dp" />
            </LinearLayout>

            <ListView
                android:id = "@+id/progListLV"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:divider = "@null"/>
        </LinearLayout>
</LinearLayout>