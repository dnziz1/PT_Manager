<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id = "@+id/relativeLayout1"
android:layout_width = "fill_parent"
android:layout_height = "wrap_content">
<!-- android:background = "@color/colorCell"> -->

<TextView
    android:id = "@+id/rClassesLVClassID"
    android:layout_width = "0dp"
    android:layout_height = "match_parent"
    android:layout_weight = "1"
    android:ellipsize = "end"
    android:padding = "5dp"
    android:singleLine = "true" />
    <!-- android:background = "@drawable/cell_shape" -->

<TextView
    android:id = "@+id/rClassesLVName"
    android:layout_width = "0dp"
    android:layout_height = "match_parent"
    android:layout_weight = "2"
    android:ellipsize = "end"
    android:padding = "5dp"
    android:singleLine = "true" />
    <!-- android:background = "@drawable/cell_shape" -->

    <TextView
        android:id = "@+id/rClassesLVDuration"
        android:layout_width = "0dp"
        android:layout_height = "match_parent"
        android:layout_weight = "1.5"
        android:ellipsize = "end"
        android:padding = "5dp"
        android:singleLine = "true" />
    <!-- android:background = "@drawable/cell_shape" -->

    <TextView
        android:id = "@+id/rClassesLVNotes"
        android:layout_width = "0dp"
        android:layout_height = "match_parent"
        android:layout_weight = "1.5"
        android:ellipsize = "end"
        android:padding = "5dp"
        android:singleLine = "true" />
    <!-- android:background = "@drawable/cell_shape" -->

    <TextView
        android:id = "@+id/rClassesLVTrainerID"
        android:layout_width = "0dp"
        android:layout_height = "match_parent"
        android:layout_weight = "1.5"
        android:ellipsize = "end"
        android:padding = "5dp"
        android:singleLine = "true" />
    <!-- android:background = "@drawable/cell_shape" -->

    <TextView
        android:id = "@+id/rClassesLVTrainerName"
        android:layout_width = "0dp"
        android:layout_height = "match_parent"
        android:layout_weight = "1.5"
        android:ellipsize = "end"
        android:padding = "5dp"
        android:singleLine = "true" />
    <!-- android:background = "@drawable/cell_shape" -->

</LinearLayout>